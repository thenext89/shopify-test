.faq-checkbox{
    position:absolute;
    opacity:0;
    z-index:-1;
  visibility: hidden;
}
.tabs{
    overflow: hidden;
}
.tab{
    width: 100%;
    height: fit-content;
    margin-top: 10px;
    color: #fff;
    overflow: hidden;
    border-radius: 10px;
}
.tab-label{
    display: flex !important;
    justify-content: space-between;
    padding: 16px;
    font-family: Arial, Helvetica, sans-serif;
    cursor: pointer;
    color: #fff;
  background-color: #000;
}
.tab-label::after{
    content:"+";
    width: 10px;
    height: 10px;
    text-align: center;
    transition: all linear .5s;
}
.tab-content{
    max-height: 0;
    padding: 0 10px;
    transition: all linear .5s;
    color: #000;
}
.faq-checkbox:checked + .tab-label::after{
    content:"-";
}
.faq-checkbox:checked ~ .tab-content{
    max-height: 100vh;
    padding: 0 10px;
}